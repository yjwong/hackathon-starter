extends ../layout

block content
  div(style='text-align: center;')
    img(src='/logo.png', alt='Logo')
  div.col-sm-6.col-sm-offset-3
    form(method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        label.control-label(for='email') Email
        input.form-control.input-lg(type='email', name='email', id='email', placeholder='Email', autofocus, required)
      .form-group
        label.control-label(for='password') Password
        input.form-control.input-lg(type='password', name='password', id='password', placeholder='Password', required)
      .form-group
        .text-center
          button.col-sm-3.btn.btn-primary.btn-block.btn-lg(type='submit')
            i.fa.fa-user
            | Save me time!
          a.btn.btn-link(href='/forgot') Forgot your password?
      .form-group
        .col-sm-offset-3.col-sm-7
          hr
